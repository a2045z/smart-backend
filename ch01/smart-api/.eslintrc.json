{
  "extends": ["eslint-config-hapi", "airbnb", "prettier"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "no-shadow": "off",
    "global-require": "off",
    "hapi/hapi-capitalize-modules": "off",
    "hapi/hapi-scope-start": "off"
  }
}
